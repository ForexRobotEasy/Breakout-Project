//| Expert start function                                            |
//+------------------------------------------------------------------+
void OnTick()
{
   // Place pending order
   if(Mode == MODE_PENDING_ORDER)
   {
      // Place pending order code
      // ...
   }
   // Place market order
   else if(Mode == MODE_MARKET_ORDER)
   {
      // Place market order code
      // ...
   }

   // Set stop loss and take profit
   // ...
   
   // Apply trailing stop
   // ...
}

